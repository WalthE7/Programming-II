#include <iostream>
#include <string>
#include <stdexcept> 
#include <cctype>    

using namespace std;

int hex2Dec(const string& hexString) {
    int decimal = 0;

    for (char c : hexString) {
        int value;

        if (isdigit(c)) {
            value = c - '0';
        } else {
            c = toupper(c); // Convert to uppercase
            if (c >= 'A' && c <= 'F') {
                value = 10 + (c - 'A');
            } else {
                throw invalid_argument("Invalid hexadecimal character found.");
            }
        }

        decimal = decimal * 16 + value;
    }

    return decimal;
}

int main() {
    string hexInput;

    cout << "Enter a hexadecimal number (e.g., 1A3F): ";
    cin >> hexInput;

    try {
        int decimalValue = hex2Dec(hexInput);
        cout << "Decimal equivalent: " << decimalValue << endl;
    } catch (const invalid_argument& e) {
        cout << "Error: " << e.what() << endl;
    }

    return 0;
}
